{
  "name": "BroPlatformer",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Mstislav Zhivodkov",
    "email": "stevemyz@gmail.com"
  },
  "scripts": {
    "postinstall": "mkdir -p dist",
    "start": "npm run build && npm run server",
    "server": "node server",
    "build": "browserify client/index.js | uglifyjs -mc --screw-ie8 > dist/bundle.js",
    "dev": "watchify client/index.js -o dist/bundle.js -dv",
    "lint": "eslint client server"
  },
  "engines": {
    "node": "4.2.1"
  },
  "dependencies": {
    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "express": "^4.13.3",
    "uglify-js": "^2.6.1",
    "phaser": "^2.4.4"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.5",
    "eslint": "^1.10.1",
    "watchify": "^3.6.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
